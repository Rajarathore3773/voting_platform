<div style="max-width: 600px; margin: 3rem auto; padding: 2rem; background: #fff; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.08); text-align: center;">
  <h1>Welcome to the Voting Platform</h1>
  <p>This is your simple home page.</p>
  <div style="margin-top: 2rem;">
    <a href="/users/new" style="display:inline-block; margin:0 1rem; padding:0.7rem 1.5rem; background:#007bff; color:#fff; border-radius:4px; text-decoration:none;">Register</a>
    <a href="/admin/elections" style="display:inline-block; margin:0 1rem; padding:0.7rem 1.5rem; background:#28a745; color:#fff; border-radius:4px; text-decoration:none;">Admin Dashboard</a>
  </div>

  <% if @elections.any? %>
  
    <h2 style="margin-top:2.5rem;">Elections</h2>
    <ul style="list-style:none; padding:0;">
      <% @elections.each do |election| %>
        <li style="margin: 1rem 0;">
          <strong><%= election.title %></strong>
          <a href="<%= ballot_election_path(election) %>" style="margin-left:1rem; background:#007bff; color:#fff; border-radius:4px; padding:0.4rem 1rem; text-decoration:none;">Vote</a>
          <a href="<%= results_election_path(election) %>" style="margin-left:0.5rem; background:#6c757d; color:#fff; border-radius:4px; padding:0.4rem 1rem; text-decoration:none;">View Results</a>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
